string :: struct {
  data:  *i8;
  count: u64;
}

__string_const :: func(data: *i8, count: u64) string {
  result: string;
  result.data = data; 
  result.count = count;
  return result;
}

print_char :: func(c: i8) #foreign putchar "ucrtbase.dll";

string_print :: func(s: string) {
  i: u64 = 0;
  while i < s.count {
    print_char(s.data[i]);
    i = i + 1;
  }
}

main :: func() {
  foo := "Hello world!";
  string_print(foo);
}

